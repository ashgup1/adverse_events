<div class="page-header">
  <h3>Safety Event #<%= @safety_event.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Comment</dt>
      <dd><%= @safety_event.comment %></dd>

      <dt>Classification</dt>
      <dd>
        <% if @safety_event.classification.present? %>
          <a href="/classifications/<%= @safety_event.classification_id %>">
            <%= @safety_event.classification.event_id %>
          </a>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @safety_event.user.present? %>
          <a href="/users/<%= @safety_event.user_id %>">
            <%= @safety_event.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Root cause</dt>
      <dd><%= @safety_event.root_cause %></dd>

      <dt>Action plan</dt>
      <dd><%= @safety_event.action_plan %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/safety_events" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @safety_event.user %>
        <a href="/safety_events/<%= @safety_event.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_safety_event/<%= @safety_event.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
